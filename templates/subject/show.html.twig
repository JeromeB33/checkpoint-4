{% extends 'base.html.twig' %}

{% block title %}Show Subject{% endblock %}

{% block body %}
<div class="flex justify-center">
    <div class="w-5/6 px-10 my-4 py-6 bg-gray-100 border-2 rounded-lg border-blue-200 rounded-lg shadow-md">
        <div class="flex justify-between items-center">
            <span class="font-light text-gray-600">{{ subject.creationDate|date("m/d/Y") }}</span>
        </div>
        <div class="text-center mt-2">
            <a class="text-3xl text-gray-700 font-bold hover:text-gray-600" href="#">{{ subject.title }}</a>
            <p class="mt-6 text-gray-600">{{ subject.synopsis }}</p>
        </div>
        <div class="mt-2">
            <p class="mt-6 text-gray-600">{{ subject.content|raw }}</p>
        </div>
        <div class="flex justify-between items-center mt-4">
            <div>
                <a class="flex items-center" href="#">
                    <h1 class="text-gray-700 font-bold">{{ subject.user.username }}</h1>
                </a>
            </div>
        </div>
    </div>
</div>

{{ include('comment/new.html.twig') }}
<div class="flex flex-col items-center m-4">
{% for comment in subject.comments %}
    <div class="flex mt-2 items-center bg-white border-blue-100 border-2 shadow-lg rounded-lg w-4/6">
        <div class=" p-3 flex flex-col justify-center items-center md:items-start mb-4 w-5/6">
        <div class="flex flex-row justify-center mr-2">
            <h3 class="text-blue-500 font-semibold text-lg text-center md:text-left ">{{ comment.user.username }}</h3>
        </div>
            <p style="width: 90%" class="text-gray-600 text-lg text-center md:text-left ">{{ comment.content }}</p>
        </div>
        <div class=" p-3 flex flex-col justify-center items-center md:items-start mb-4 w-1/6">
        {{ include('comment/_report_button.html.twig') }}

        </div>
    </div>
{% endfor %}
</div>
{% endblock %}
